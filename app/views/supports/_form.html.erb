<%= simple_form_for @support do |f| %>
  <%= render partial:'shared/errors', locals:{obj: @support} %>
  <div><%= f.input :name %></div>
  <div><%= f.association :media_type, collection: MediaType.all.order(:name) %></div>
  <div><%= f.association :sourceLanguage, collection: Language.all.order(:name), label: 'Language of the media' %></div>
  <div><%= f.association :targetLanguage, collection: Language.all.order(:name), label: 'Language of translation' %></div>
  <div><%= f.submit submit_value %></div>
<% end %>
