<%= simple_form_for @support, html: {class:'admin-modal-form'}, remote: true do |f| %>
  <%= render partial:'shared/errors', locals:{obj: @support} %>
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.input :name %>
  <div class="py1">
    <%= f.association :media_type, collection: MediaType.all.order(:name), label: 'What is it?' %>
  </div>
  <div class="py1">
    <%= f.association :sourceLanguage, collection: Language.all.order(:name), label: 'Language of the media', disabled: !@support.languages_updatable? %>
  </div>
  <div class="py1">
    <%= f.association :targetLanguage, collection: Language.all.order(:name), label: 'Language of translation', disabled: !@support.languages_updatable? %>
  </div>
  <div class="py1">
    <%= f.submit submit_value, class: 'btn btn-orange' %>
  </div>
<% end %>
