<div>
  <div>
    <%= link_to support_translations_path(support) do %>
      <i class="<%= MediaType::ICONS[support.media_type.name] %>"></i> <%= support.name %>
    <% end %>
    <span>
      <%= support.translations.size %>
    </span>
  </div>
  <div>
    <ul>
      <li><%= link_to 'Review', support_reviews_path(support, what_to_study: "all"), remote: true, method: :post if support.reviewable? %></li>
      <li><%= link_to "Update", edit_support_path(support) %></li>
      <li><%= link_to "Delete", support_path(support), method: :delete, data: {confirm: 'Are you sure?'} %></li>
      <% support.archive_at.nil? ? link_name = 'Archive' : link_name = 'Unarchive' %>
      <li><%= link_to link_name, archive_support_path(support), method: :patch %></li>
    </ul>
  </div>
</div>
