<%= form_for([@support, @translation]) do |f| %>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th><%= @support.sourceLanguage.name %></th>
            <th>Contexte</th>
            <th><%= @support.targetLanguage.name %></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% if show_translations %>
            <%= render @translations %>
        <% end %>
        <tr>
            <td><%= f.text_field :sourceWriting %></td>
            <td><%= f.text_field :context %></td>
            <td><%= f.text_field :targetWriting %></td>
            <td colspan="2"><%= f.submit submit_value %></td>
        </tr>
    </tbody>
</table>
<% end %>
