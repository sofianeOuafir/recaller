<%= simple_form_for [@support, @translation], html: { class: 'admin-modal-form' }, remote: true do |f| %>
  <%= f.hidden_field :support_id, value: @support.id %>
  <%= f.text_field :sourceWriting, placeholder: "Word in #{@support.sourceLanguage.name}", :required => true %>
  <%= f.text_field :targetWriting, placeholder: "Translation in #{@support.targetLanguage.name}", :required => true %>
  <%= f.text_field :context, placeholder: 'Give a context!'  %>
  <%= f.submit submit_value, class: 'btn btn-orange' %>
<% end %>
