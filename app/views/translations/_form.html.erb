<%= form_for([@support, @translation]) do |f| %>
    <% #TODO display error if cannot create writings %>
    <div class="row" style="border: 1px black solid;">
        <div class="col-md-4 nopadding" style="border: 1px black solid;">
            <%= @support.sourceLanguage.name %>
        </div>
        <div class="col-md-4 nopadding" style="border: 1px black solid;">
            Contexte
        </div>
        <div class="col-md-4 nopadding" style="border: 1px black solid;">
            <%= @support.targetLanguage.name %>
        </div>
    </div>

    <%= render @translations if index_page %>
    <% css_class = index_page ? 'add-translation-form' : '' %>
    <div class="<%= css_class %> form-group">
        <div class="row" style="border: 1px black solid;">
            <div class="col-md-4 nopadding" style="border: 1px black solid;"><%= f.text_field :sourceWriting, class: "form-control input-translation-form", placeholder: 'Mot - ex: Bonjour!'  %></div>
            <div class="col-md-4 nopadding" style="border: 1px black solid;"><%= f.text_field :context, class: "form-control input-translation-form", placeholder: 'Donnez un exemple!'  %></div>
            <div class="col-md-4 nopadding" style="border: 1px black solid;"><%= f.text_field :targetWriting, class: "form-control input-translation-form", placeholder: 'DÃ©finition - ex: Hello!' %></div>
        </div>
        <div class="row">
            <div class="col-md-6 nopadding" style="border:1px black solid">
                <%= f.submit submit_value, class: "btn btn-primary" %>
                <%= link_to 'Annuler', 'javascript:;', :onclick => 'hideTranslationForm()' if index_page %>
            </div>
        </div>
    </div>
<% end %>
