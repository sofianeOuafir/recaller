<div class="border bg-orange flex justify-between">
  <div>
      <%= link_to "Recall", root_path %>
  </div>
  <div>
    <ul>
      <% if user_signed_in? %>
        <li>
          <a>
            <%= current_user.username %>
          </a>
          <ul>
            <li><%= link_to 'Account Details', edit_user_registration_path %></li>
            <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</div>
