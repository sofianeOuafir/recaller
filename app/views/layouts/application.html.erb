<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= yield :head %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/navbar" %>

    <div class="container-fluid" style="margin-top:70px">
        <div class="row" style="border:1px black solid">
            <div class="col-md-offset-2 col-md-3" style="border:1px red solid">
                <h6>Medias</h6>
                <%= render @supports %>
                <div class="row">
                    <%= link_to new_support_path do %>
                        <span class="glyphicon glyphicon-plus" aria-hidden="true">Nouveau media</span>
                    <% end %>
                </div>
            </div>
            <div class="col-md-5" style="border:1px black solid">
                <%= yield %>
            </div>
        </div>
    </div>
  </body>
</html>
