<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= yield :head %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-modal/0.9.1/jquery.modal.min.css" />
    <link href="https://unpkg.com/basscss@8.0.2/css/basscss.min.css" rel="stylesheet">
    <link href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet">

  </head>

  <body>
    <%= render "shared/navbar" %>

    <div class="border">
        <div class="border col col-12">
            <div class="border flex flex-column col col-3">
                <%= render @active_supports %>
                <p>Medias archiv√©s <%= @archived_supports.count %></p>
                <%= render @archived_supports %>
                <%= link_to 'New Media', new_support_path %>
            </div>
            <div class="border col col-9">
                <%= yield %>
            </div>
        </div>
    </div>
  </body>
  <div id="modal-container"></div>
  <%= render 'shared/js/jquery' %>
  <%= render 'shared/js/modal' %>

</html>
