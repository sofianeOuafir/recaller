<div id="modal" class="modal" style="display:none;">
  <h1 class="center"><%= Teacher.am_i_right?(@answer) %></h1>
  <div class="center pb2">
    <% if @answer.correct? %>
      <i class="ion-checkmark-circled text-green h1"></i>
    <% else %>
      <i class="ion-close-circled text-ruby h1"></i>
    <% end %>
  </div>
  <% if @review.complete? %>
    <p class="center">Congratulations! You have finished this revision.</p>
    <%= render partial: 'home/mark', locals: { support: @review } %>
    <div class="flex justify-between">
      <div>
        <%= link_to 'Start Again', support_reviews_path(@review.support, what_to_study: "all"), method: :post, remote: true, class:'btn btn-orange block center' %>
      </div>
      <div>
        <% if Reviews::IncorrectAnswerFetcher.process(@review).present? %>
          <%= link_to 'Revise only the words I made a mistake on.', support_reviews_path(@review.support, what_to_study: "mistaken"), method: :post, remote: true, class:'btn btn-orange block center' %>
        <% end %>
      </div>
    </div>

    <div class="mt2">
      <%= link_to '#', class: 'btn btn-outline-orange close_button block fullwidth' do %>
        <div class="center">Close</div>
      <% end %>
    </div>
  <% else %>
    <%= link_to 'Next Question', new_review_answer_path(@review), remote: :true, class: 'block btn btn-orange center' %>
    <div class="mt2">
      <%= link_to '#', class: 'btn btn-outline-orange close_button block fullwidth' do %>
        <div class="center">Pause</div>
      <% end %>
    </div>
  <% end %>


</div>

<script type="text/javascript">
  $('close_button').onClick({
    location.reload();
  })
</script>
